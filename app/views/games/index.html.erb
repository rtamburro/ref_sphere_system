<p id="notice"><%= notice %></p>

<h1>Games</h1>

<div>
    <% @games.each do | game | %>
        <%= link_to game do %>
            <p><%= game.home_team %> vs <%= game.away_team %></p>
        <% end %>
        <p><%= game.start_time.strftime("%b %d, %Y %I:%M%P")  %> - <%= game.end_time.strftime("%I:%M%P")  %></p>
        <br>
        <p><%= link_to 'Show', game %></p>
        <p><%= link_to 'Edit', edit_game_path(game) %></p>
        <p><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    <% end %>
</div>

<br>
<%= link_to 'New Game', new_game_path %>