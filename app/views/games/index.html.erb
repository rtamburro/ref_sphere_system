<p id="notice"><%= notice %></p>

<h1>Games</h1>


    <% @games.each do | game | %>
    <div class="mb-4">
        <%= link_to game do %>
            <p><%= game.home_team %> vs <%= game.away_team %></p>
        <% end %>
        <p><%= game.start_time&.strftime("%b %d, %Y %l:%M%P")  %> - <%= game.end_time&.strftime("%l:%M%P")  %></p>
        <br>
        <p><%= link_to 'Show', game %></p>
        <p><%= link_to 'Edit', edit_game_path(game) %></p>
        <p><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        <p><%= link_to 'Assignment', edit_assignment_path(game) %></p>
    <% end %>
    <div>


