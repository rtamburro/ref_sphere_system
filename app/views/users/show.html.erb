<div class="z-0 w-full py-40 pt-32 pb-20 bg-black"></div>
<div class="inline-flex mb-10">
    <% if current_user.profile_picture.attached? %>
        <img class="w-48 h-48 -mt-24 border-solid rounded-full border-sky-300 border-6 ml-80" src=<%= current_user.profile_picture.url(:gravity=>"face", :zoom=>0.5, :width=>300, :height=>300, :crop=>"thumb") %> >
    <% else %>
        <%= image_tag("profile_default.jpg", class: "w-48 h-48 -mt-24 border-solid rounded-full border-sky-300 border-6 ml-80") %>
    <% end %>
    <div>
        <h1 class="pt-4 pl-4 text-2xl text-left"><%= current_user.first_name %></h1>
        <h1 class="pt-2 pl-4 text-sm text-left"><%= current_user.grade %> Referee</h1>
    </div>
</div>

<div class="ml-40 mb-20">
    <h1 class="mb-4"><strong>Contact Information:</strong></h1>
    <div>
        <h1 class="mb-4"><strong>Email: </strong><%= current_user.email %></h1>
        <div class="mb-4">
            <h1 class=""><strong>Cell Phone: </strong><%= current_user.formatted_cell_phone %></h1>
            <h1 class=""><strong>Work Phone: </strong><%= current_user.formatted_work_phone %></h1>
            <h1 class=""><strong>Home Phone: </strong><%= current_user.formatted_home_phone %></h1>
        </div>
        <div class="mb-4">
            <h1 class=""><strong>Address: </strong></h1>
            <h1 class=""><%= current_user.address["street_address"] %></h1>
            <h1 class=""><%= current_user.address["city"] %>, <%= current_user.address["state"] %>, <%= current_user.address["zip_code"] %></h1>
        </div>
    </div>
</div>

<div class="mb-32">
<%= month_calendar(events: current_user.games+current_user.blocks) do |date, events| %>
	<h1><%= date.day %></h1>

	<% events.each do |event| %>
        <div>
            <% if event.is_a? Game %>
                <%= link_to event do %>
			        <h1 class="text-center bg-green-600 text-white"><%= event.teams %></h1>
                <% end %>
            <% elsif event.is_a? Block %>
                <%= link_to event do %>
                    <h1 class="text-center bg-red-500"> Block: <%= event.start_time.strftime("%I:%M%P")  %> - <%= event.end_time.strftime("%I:%M%P")  %> </h1>
                <% end %>
            <% end %>
        </div>    
    <% end %>
<% end %>
</div>